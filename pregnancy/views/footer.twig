<section class="footer">
	<div class="container">
    	<div class="footer-sec">
        	<div class="row">
            	<div class="col-md-8 col-sm-6">
                	<a href="/" class="footer-logo">
                    	<img src="{{ function('get_content_tree','logo_footer') }}" class="img-responsive" />
                    </a>
                </div>
                <div class="col-md-4 col-sm-6">
                	<ul class="footer-nav text-right">
			{% for item in menu_footer.get_items %}
				<li class="{{item.classes | join(' ')}}">
				    <a href="{{item.get_link}}">{{item.title}}</a>
				</li>
			{% endfor %}
                    </ul>
                    <p class="footer-content text-right">&copy {{ "now"|date('Y' ) }} {{ function('bloginfo','name') }}</p>
                </div>
            </div>
        </div>
    </div>
</section>
