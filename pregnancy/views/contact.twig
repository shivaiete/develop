{% extends "layout.twig" %}

{% block content %}
<section class="contact">
	<div class="container">
    	<div class="contact-sec">
        	<h1 class="heading1 text-center">{{ 'contact.title1.content'|trans }}</h1>
            <div class="row">            
                <div class="col-md-8 col-sm-10 col-md-offset-2">
                    <div class="contact-area">
                        <div class="row">
                            <form class="form-contact">
			    <div class="form-group">
				<div class="col-md-12">
				    <div class="alert alert-danger" role="alert" style="display:none;"><b>{{ 'contact.error.content'|trans }}</div>
				</div>
			    </div>
                            <div class="col-md-4 col-sm-4">
                                <label for="basic-url">{{ 'form.label.surname'|trans }}</label>
                                <div class="input-group col-md-12">                              
                                  <input type="text" class="form-control" required placeholder="{{ 'form.label.surname'|trans }}" aria-describedby="basic-addon1">
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <label for="basic-url">{{ 'form.label.firstname'|trans }}</label>
                                <div class="input-group col-md-12">                              
                                  <input class="form-control" name="firstname" type="text" required placeholder="{{ 'form.label.firstname'|trans }}" aria-describedby="basic-addon1">
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <label for="basic-url">{{ 'form.label.email'|trans }}</label>
                                <div class="input-group col-md-12"> 
				<input class="form-control" name="email" type="email" required placeholder="{{ 'form.label.email'|trans }}" aria-describedby="basic-addon1">
                                </div>
                            </div>
			    <div class="col-md-4 col-sm-4">
                                <label for="basic-url">{{ 'contact.label.subject'|trans }}</label>
                                <div class="input-group col-md-12"> 
				<input class="form-control" type="text" required placeholder="{{ 'contact.label.subject'|trans }}">
				</div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="input-group col-md-12">
								<label for="basic-url">{{ 'contact.title3.content'|trans }}</label>
                                  <textarea class="form-control" placeholder="" aria-describedby="basic-addon1"></textarea>
								  <div class="clearfix"></div>
				  <button type="submit" class="btn btn-contact">{{ 'contact.btn.content'|trans }}</button>
                                </div>
                            </div>
                            </form>
                        </div>                        
                    </div>
                    
                </div>
           </div>
        </div>
    </div>
</section>
    
{% endblock content %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).on('submit','.form-contact',function(event){
            event.preventDefault();
            $('.alert-danger').css('display','block');
        });
    </script>
{% endblock javascript %}
