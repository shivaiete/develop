{% extends "layout.twig" %}

{% block content %}
<section class="contact">
	<div class="container">
    	<div class="contact-sec">
        	<h1 class="contact-heading text-center">{{ 'password_reset.title.content'|trans }}</h1>
            <div class="row">            
                <div class="col-md-6 col-sm-10 col-md-offset-3">
                    <div class="contact-area">
                        <div class="row">
                        	<div class="col-md-8 col-md-offset-2">
                            	<div class="row">
                                    <form class="form-contact" method="post">
					<input type="hidden" name="nonce" value="{{ nonce }}" />
					{% if validation is not empty %}
						<div class="form-group">
							<div class="col-md-12">
								<div class="alert alert-danger" role="alert">{{ validation }}</div>
							</div>
						</div>
					{% endif %}
                                    <div class="col-md-12 col-sm-12">
                                        <label for="basic-url">{{ 'password_reset.placeholder.username'|trans }}</label>
                                        <div class="input-group col-md-12">                              
                                          <input class="form-control" type="text" name="user_login" required placeholder="{{ 'password_reset.placeholder.username'|trans }}">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
					<button type="submit" class="btn btn-contact">{{ 'password_reset.btn.reset'|trans }}</button>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>                        
                    </div>                    
                </div>
           	</div>
        </div>
    </div>
</section>
{% endblock content %}

{% block javascript %}
    {#{{ parent() }}#}
    {#<script type="text/javascript">#}
	    {#$ ( document ).on (#}
		    {#'submit',#}
		    {#'.form-contact',#}
		    {#function ( event ) {#}
	            {#event.preventDefault ();#}
	            {#$ ( '.alert-danger' ).css ( 'display', 'block' );#}
            {#}#}
	    {#);#}
    {#</script>#}
{% endblock javascript %}
