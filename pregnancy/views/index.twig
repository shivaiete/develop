{% extends "layout.twig" %}
{% set elementSlider = slider|length - 1 %}

{% block content %}
<section class="banner">
	<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <ol class="carousel-indicators">
                {% for i in 0..elementSlider %}
                    {% if loop.first %}
                        <li data-target="#carousel-example-generic" data-slide-to="{{ i }}" class="active"></li>
                    {% else %}
                        <li data-target="#carousel-example-generic" data-slide-to="{{ i }}"></li>
                    {% endif %}
                {% endfor %}
            </ol>
            {% for slide in slider %}
                {% if loop.first %}
                    <div class="item active">
                        <img src="{{ slide.thumbnail.src }}">
                        <div class="carousel-caption">
							<div class="banner-text">
							<div class="text-padding">
							 <h2>{{ slide.post_title }}</h2>
							 <p>{{ slide.post_content }}</p>
							 <a class="btn text-uppercase" href="{{ slide.custom._action_url }}">{{ 'landing.btn.discover'|trans }}</a>
							 </div>
							</div>
                        </div>
                    </div>
                {% else %}
                    <div class="item">
                        <img src="{{ slide.thumbnail.src }}">
                        <div class="carousel-caption">
                            <div class="banner-text">
							<div class="text-padding">
							 <h2>{{ slide.post_title }}</h2>
							 <p>{{ slide.post_content }}</p>
							 <a class="btn text-uppercase" href="{{ slide.custom._action_url }}">{{ 'landing.btn.discover'|trans }}</a>
							 </div>
							</div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>
<section class="categories">
	<div class="container">
    	<div class="categories-sec">
        	<div class="col-md-6 col-sm-6">
            	<h1 class="categories-heading">{{ 'landing.title.category'|trans }}</h1>
                <div class="images-sec">
                	<div class="row">
			{% for categorie in categories|slice(0, 4) %}
			    <div class="col-md-6 col-sm-6 col-xs-6">
				<a href="{{ function('get_term_link', categorie.term_id, categorie.taxonomy )}}">
				    <img src="{{ function('get_wp_term_image', categorie.term_id ) }}" class="img-responsive">
				    <a href="{{ function('get_term_link', categorie.term_id, categorie.taxonomy )}}" class="btn smart-btn">{{ 'landing.btn.discover'|trans }}</a>
				</a>
			    </div>
			{% endfor %}
                    </div>                	
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
		{% for categorie in categories|slice(0, 1) %}
            	<h2 class="categories-heading">{{ categorie.name }}</h2>
                <div class="content-sec">
                	{{ categorie.description }}            	                	
                </div>
		{% endfor %}
            </div>
        </div>
    </div>
</section>
<section class="services">
	<div class="container">
    	<div class="services-sec">
        	<h3 class="services-heading text-center">{{ 'product.title.content'|trans }}</h3>
            <div class="row">
	     {% for product in products|slice(0, 4) %}
		<div class="col-md-3 col-sm-3">
                	<img src="{{ product.thumbnail.src }}" alt="" title="" class="img-responsive img-circle" />
                    <a href="{{ function('home_url','tarif')}}" class="services-title">{{ product.post_title }}</a>
                    <p class="text-center">{{ product.post_content | truncate(60, true) }}</p>
                </div>
	     {% endfor %}
            </div>
        </div>
    </div>
</section>
<section class="about">
	<div class="container">
    	<div class="about-sec">
        	<div class="row">
            	<div class="col-md-8 col-xs-offset-2">
		<h4 class="about-heading text-center">{{ function('get_option_tree', 'footer_title_content') }}</h4>
                    <p class="text-center">{{ function('get_option_tree', 'footer_text_content') }}</p>
                </div>
            </div>        	
        </div>
    </div>
</section>
{% endblock content %}