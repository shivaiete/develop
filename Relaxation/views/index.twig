{% extends "layout.twig" %}
{% set elementSlider = slider|length - 1 %}

{% block content %}
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel"> 
    <div class="carousel-inner" role="listbox">
        <ol class="carousel-indicators">
            {% for i in 0..elementSlider %}
            {% if loop.first %}
            <li data-target="#carousel-example-generic" data-slide-to="{{ i }}" class="active"></li>
            {% else %}
            <li data-target="#carousel-example-generic" data-slide-to="{{ i }}"></li>
            {% endif %}
            {% endfor %}
        </ol>
        {% for slide in slider %}
        {% if loop.first %}
        <div class="item active">
            <img src="{{ slide.thumbnail.src }}">
            <div class="carousel-caption">
                <div class="caption-text">
                    <h4>{{ slide.post_title }}</h4>
                    <p>{{ slide.post_content }}</p>
                    <a href="{{ slide.custom._action_url }}" class="btn-anim1 btn--slider">{{ 'landing.btn.slider'|trans }}</a> 
                </div>
            </div>
        </div>
        {% else %}
        <div class="item">
            <img src="{{ slide.thumbnail.src }}">
            <div class="carousel-caption">
                <div class="caption-text">
                    <h4>{{ slide.post_title }}</h4>
                    <p>{{ slide.post_content }}</p>
                    <a href="{{ slide.custom._action_url }}" class="btn-anim1 btn--slider">{{ 'landing.btn.slider'|trans }}</a> 
                </div>
            </div>
        </div>
        {% endif %}
        {% endfor %} 
    </div>
</div>
<div class="container-fludic ptrn">
    <div class="container home-category">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row"> 
                        {% for categorie in categories|slice(0, 6) %}
                            <div class="col-md-4 catimg">
                                <img src="{{ function('get_wp_term_image', categorie.term_id ) }}" class="" alt="" /> 
                            </div>
                        {% endfor %} 
                        </div>
                    </div>
                </div>
            </div>
            {% for categorie in categories|slice(0, 1) %}
            <div class="col-md-6">
                <h3>{{ categorie.name }}</h3>
                <p>{{ categorie.description }} </p>
            </div>
            {% endfor %} 
        </div>
    </div>
</div>
{% for post in posts|slice(0, 1) %}
<div class="blue-band text-center">
    <div class="container">
        <h2>{{ post.name }}</h2>
        <p>{{ post.post_content | truncate(50, true) }}</p>
    </div>
</div>
{% endfor %} 

<div class="container-fludic ptrn">
    <div class="container">
        <div class="row text-center footer-area">
            <h3>{{ function('get_option_tree', 'footer_title_content') }}</h3>
            <p>{{ function('get_option_tree', 'footer_text_content') }}</p>
        </div>
        <div class="row"> 
            {% for product in products|slice(0, 4) %}
            <div class="col-md-3">
                <div class="footer-section">
                    <h3>{{ product.post_title }}</h3>
                    <img src="{{ product.thumbnail.src }}" alt="" />
                    <p>{{ product.post_content | truncate(60, true) }}</p>
                </div>
            </div>
            {% endfor %} 
        </div>
    </div>
</div>
{% endblock content %}