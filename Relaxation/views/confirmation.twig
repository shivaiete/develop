{% extends "layout.twig" %}
{% block content %}
<div class="container-fludic ptrn">
    <div class="container">
        <div class="page-header">
            <h1 class="text-center">{{ 'confirmation.step.content'|trans }}</h1>
        </div>
        <div class="steps-icon-cont row text-uppercase text-center">
            <div class="col-md-3">
                <div class="steps step-1 selected1">
                    <span class="icon"></span>
                    <span class="number"></span>
                    <span class="arrow"></span>
                    <span>{{ 'registration.step.content'|trans }}</span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="steps step-2 selected2">
                    <span class="icon"></span>
                    <span class="number"></span>
                    <span class="arrow"></span>
                    <span>{{ 'recap.step.content'|trans }}</span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="steps step-3 selected3">
                    <span class="icon"></span>
                    <span class="number"></span>
                    <span class="arrow"></span>
                    <span>{{ 'payment.step.content'|trans }}</span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="steps step-4 selected4">
                    <span class="icon"></span>
                    <span class="number"></span>
                    <span>{{ 'confirmation.step.content'|trans }}</span>
                </div>
            </div>
        </div>
        <form id="paymentForm">
            <div class="form-group">
                <div class="alert alert-danger" role="alert" style="display:none;">
                    <b>{{ 'form.payment.error'|trans }}</b>
                </div>
            </div>
        <div class="page-header">
            <h1 class="text-center">{{ 'confirmation.step.content'|trans }}</h1>
        </div>
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <div class="well well-lg text-center">
                    <div class="well-lg">
                    {% for post in posts %}
                        <h5>{{ post.title }}</h5>
                        <h5>{{ post.post_content }}</h5>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
</div>
{% endblock content %}